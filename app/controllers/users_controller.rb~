# coding: utf-8
class UsersController < ApplicationController
  def new
    @user = User.new
  end

  def create
    @user = User.new(user_params)
    if @user.save

    else
            flash.now[:danger] = 'nameかpasswordに誤りがあります。もう一度ご確認ください。'
      render 'new'
    end
  end

  def user_params
    params.require(:user).permit(:name, :password, :password_confirmation)
  end
end
