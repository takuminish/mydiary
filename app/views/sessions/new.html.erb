<h1>Login</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: signin_path) do |f| %>

    <%= f.label :name  %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :password  %>
    <%= f.password_field :password, class: 'form-control' %></br>

    <%= f.submit "Sign in", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
